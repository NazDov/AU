<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textSize">@dimen/au_global_text_size</item>
    </style>

    <style name="AUNewsFeedItemDetailTheme" parent="AppTheme.NoActionBar">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/news_feed_tab_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/news_feed_tab_color</item>
    </style>

    <style name="AUEventItemDetailTeam" parent="AppTheme.NoActionBar">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/schedule_tab_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/schedule_tab_color</item>
    </style>
</resources>

